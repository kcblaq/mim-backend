
 model User {
  id        Int  @id @default(autoincrement())
  email     String  @unique
  password  String
  firstName String
  lastName String
  createdAt DateTime @default(now())
  verified  Boolean  @default(false)
  verificationToken String? // âœ… Nullable token for email verification
  profile   Profile?
  provider String?
  subject String?
  transaction Transaction[]
  notification Notification[]
  Sender Chat[] @relation("Sender")
  Receiver Chat[] @relation("receiver")
  disputeSender_id Dispute? @relation("sender_userId")
  disputeReceiver_id Dispute? @relation("receiver_userId")
}

